<UserControl x:Class="SQLImportData.Steps.ToDataSource"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             >
    <Grid>
        <StackPanel>
            <TextBlock Grid.Row="0" Text="SQL Destino" Style="{StaticResource Header}"/>
            <TextBlock Text="DataSource" Margin="0,10,0,0"/>
            <TextBox Text="{Binding DataSource, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Nome da Tabela Temporária"/>
            <TextBox Text="{Binding Table, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>