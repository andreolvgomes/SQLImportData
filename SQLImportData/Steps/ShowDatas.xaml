<UserControl x:Class="SQLImportData.Steps.ShowDatas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Grid.Row="0" Text="Dados" Style="{StaticResource Header}"/>
            <TextBlock Text="A primeira linha deve ser o cabeçalho dos dados" FontSize="10" Style="{StaticResource Header}" Foreground="Red"/>
        </StackPanel>
        <DataGrid x:Name="dgvData" Grid.Row="1"/>
    </Grid>
</UserControl>