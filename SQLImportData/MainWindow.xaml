<Window x:Class="SQLImportData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Width="600" SizeToContent="Height" WindowStartupLocation="CenterScreen"
        >
    <StackPanel Margin="10">
        <Grid x:Name="gridControl" Height="300"/>

        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,2,0,0" Padding="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnPrevious" Content="&lt;&lt;" Width="150" Height="25" Click="Previous_Click"/>
                <Button x:Name="btnNext" Content="&gt;&gt;" Width="150" Height="25" Click="Next_Click"/>
                <Button x:Name="btnFinish" Content="Concluir" Width="150" Height="25" Click="Ok_Click" Foreground="Green"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>